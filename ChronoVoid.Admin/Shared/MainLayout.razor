@inherits LayoutComponentBase

<div class="admin-layout">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="bi bi-cpu"></i> ChronoVoid 2500 Admin
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                            <i class="bi bi-house"></i> Dashboard
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="/users-enhanced">
                            <i class="bi bi-people"></i> Users
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="/realms-enhanced">
                            <i class="bi bi-globe"></i> Realms
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="/alien-races-enhanced">
                            <i class="bi bi-robot"></i> Alien Races
                        </NavLink>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-plus-circle"></i> Create
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/create-realm"><i class="bi bi-globe"></i> New Realm</a></li>
                            <li><a class="dropdown-item" href="/generate-aliens"><i class="bi bi-robot"></i> Generate Aliens</a></li>
                        </ul>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <span class="navbar-text">
                            <i class="bi bi-clock"></i> @DateTime.Now.ToString("HH:mm")
                        </span>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container-fluid">
            @Body
        </div>
    </main>
</div>

<div id="blazor-error-ui">
    <environment include="Staging,Production">
        An error has occurred. This application may no longer respond until reloaded.
    </environment>
    <environment include="Development">
        An unhandled exception has occurred. See browser dev tools for details.
    </environment>
    <a href="" class="reload">Reload</a>
    <a class="dismiss">ðŸ—™</a>
</div>

<style>
    .admin-layout {
        min-height: 100vh;
        background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #16213e 100%);
        color: #ffffff;
    }

    .main-content {
        margin-top: 76px; /* Account for fixed navbar */
        padding: 20px 0;
    }

    .navbar-brand {
        font-weight: bold;
        color: #00ff88 !important;
    }

    .nav-link {
        color: #ffffff !important;
        transition: all 0.3s ease;
    }

    .nav-link:hover {
        color: #00ff88 !important;
        background-color: rgba(0, 255, 136, 0.1);
        border-radius: 4px;
    }

    .nav-link.active {
        color: #00ff88 !important;
        background-color: rgba(0, 255, 136, 0.2);
        border-radius: 4px;
    }

    .dropdown-menu {
        background-color: #2a2a2a;
        border: 1px solid #00ff88;
    }

    .dropdown-item {
        color: #ffffff;
    }

    .dropdown-item:hover {
        background-color: rgba(0, 255, 136, 0.1);
        color: #00ff88;
    }

    .admin-title {
        color: #00ff88;
        text-shadow: 0 0 10px rgba(0, 255, 136, 0.3);
        margin-bottom: 30px;
    }

    .card {
        background: rgba(42, 42, 42, 0.9);
        border: 1px solid rgba(0, 255, 136, 0.3);
