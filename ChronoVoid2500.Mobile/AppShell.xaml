<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ChronoVoid2500.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ChronoVoid2500.Mobile.Views"
    Title="ChronoVoid 2500"
    FlyoutBehavior="Disabled">

    <ShellContent
        Title="Debug"
        ContentTemplate="{DataTemplate views:DebugPage}"
        Route="debug"
        Shell.FlyoutBehavior="Disabled" />

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="login"
        Shell.FlyoutBehavior="Disabled" />

    <ShellContent
        Title="Realms"
        ContentTemplate="{DataTemplate views:RealmsPage}"
        Route="realms"
        Shell.FlyoutBehavior="Disabled" />

    <ShellContent
        Title="Game"
        ContentTemplate="{DataTemplate views:GamePage}"
        Route="game"
        Shell.FlyoutBehavior="Disabled" />

</Shell>
